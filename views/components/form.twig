{% macro form()%}


    <div class="row justify-content-center bg-light rounded-3 p-5">
        <form>
            <div class="form-group">
                <div class="col-3 ">
                    <select class=" form-select form-select-sm border-dark" aria-label=".form-select-sm example">
                        <option selected>Category</option>
                        <option value="1">Flexibility Exercise</option>
                        <option value="2">Resistance Exercise</option>
                        <option value="3">Aerobic Exercise</option>
                    </select>
                </div>

            </div>
            <div class="form-group mt-3">
                <label class="fw-bolder" for="exampleInputPassword1">Due Date</label>
                <input type="date" id="date" name="date">
            </div>
            <div class="form-group col-md-8 mt-2">
                <label class="fw-bolder" for="exampleInputPassword1">Exercise name</label>
                <input type="int" class="form-control border-dark" id="exampleInputEmail1"
                    aria-describedby="addExercise">

            </div>
            <div class="row">
                <div class="form-group col-md-4 mt-2">
                    <label class="fw-bolder" for="exampleCheck1">Set</label>
                    <input type="int" class="form-control border-dark" id="exampleInputEmail1"
                        aria-describedby="addExercise">
                </div>
                <div class="form-group col-md-4 mt-2">
                    <label class="fw-bolder" for="exampleCheck1">Time</label>
                    <input type="int" class="form-control btn  border-dark" id="exampleInputEmail1"
                        aria-describedby="addExercise">
                </div>
            </div>
            <button type="submit" class="btn mt-2 btn-outline-success fw-bold">Submit</button>
        </form>
    </div>
</div>

{% endmacro %}